<div class="navbar-container">
  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top">
    <%= link_to "rent-a-puppy", root_path, class: "title-name brand-name" %>
<!--   <%= link_to "/", class: "navbar-brand" do %>
  <% end %> -->

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">

      <!--  Navbar stuff for logged in user -->

      <% if user_signed_in? %>

      <li class="nav-item">
        <%= link_to "List a puppy", new_puppies_path, class: "nav-link" %>
      </li>
      <%# if current_user.taking_puppies != nil %>
      <!-- <li class="nav-item"> -->
        <%#= link_to "Booked puppies", booked_puppies_path, class: "nav-link" %>
      <!-- </li> -->
      <%# end %>
      <li class="nav-item dropdown">
        <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Profile", profile_users_path, class: "dropdown-item" %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </li>

      <!--  Navbar stuff for not logged in user -->

      <% else %>

      <% if controller_name != 'sessions' %>
        <li class="nav-item">
          <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#signinModal" id="signinbutton">
          Sign in
        </button>
        </li>
      <% end %>
      <% if controller_name != 'registrations'%>
        <li class="nav-item">
        <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
        </li>
      <% end %>
      <% if controller_name != 'registrations' && controller_name != 'sessions' %>
      <li class="nav-item">
        <%= link_to "List a puppy", new_puppies_path(list_new_puppy: true), class: "nav-link" %>
      </li>
      <% end %>

      <% end %>
    </ul>
  </div>
</div>
</div>
