<div class="container">
  <div class="row">
    <div class="col-12 col-lg-12 col-md-8 col-sm-4">
      <div class="flex-container">
         <% @puppies.each do |puppy| %>
            <%= link_to puppy_path(puppy) do %>
              <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path(puppy.photo) if puppy.photo_url %>)">
                <h3><%= puppy.name %></h3>
              </div>
            <% end %>
         <% end %>
      </div>
    </div>
  </div>
</div>


<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>

